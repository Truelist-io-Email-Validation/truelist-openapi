{
  "info": {
    "name": "Truelist API",
    "description": "Email validation API by Truelist. Verify email addresses in real time to reduce bounces and block disposable addresses.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{api_key}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://api.truelist.io"
    },
    {
      "key": "api_key",
      "value": "YOUR_API_KEY"
    }
  ],
  "item": [
    {
      "name": "Email Validation",
      "item": [
        {
          "name": "Inline email validation",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/v1/verify_inline?email=user@example.com",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "verify_inline"],
              "query": [
                {
                  "key": "email",
                  "value": "user@example.com"
                }
              ]
            },
            "description": "Validate a single email address synchronously. Email is passed as a query parameter."
          },
          "response": [
            {
              "name": "Valid email",
              "status": "OK",
              "code": 200,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"emails\": [\n    {\n      \"address\": \"user@example.com\",\n      \"domain\": \"example.com\",\n      \"canonical\": \"user@example.com\",\n      \"mx_record\": null,\n      \"first_name\": null,\n      \"last_name\": null,\n      \"email_state\": \"ok\",\n      \"email_sub_state\": \"email_ok\",\n      \"verified_at\": \"2026-02-21T10:39:12.570Z\",\n      \"did_you_mean\": null\n    }\n  ]\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "Batch Verification",
      "item": [
        {
          "name": "Batch email verification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"emails\": [\n    \"user1@example.com\",\n    \"user2@example.com\"\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/verify",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "verify"]
            },
            "description": "Upload a list of emails for batch verification. Processes in the background."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Account",
      "item": [
        {
          "name": "Get account information",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/me",
              "host": ["{{base_url}}"],
              "path": ["me"]
            },
            "description": "Retrieve your account details including name, email, plan, and API keys."
          },
          "response": [
            {
              "name": "Account info",
              "status": "OK",
              "code": 200,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"email\": \"team@company.com\",\n  \"name\": \"Team Lead\",\n  \"uuid\": \"a3828d19-1234-5678-9abc-def012345678\",\n  \"time_zone\": \"America/New_York\",\n  \"is_admin_role\": true,\n  \"token\": \"abc123\",\n  \"api_keys\": [],\n  \"account\": {\n    \"name\": \"Company Inc\",\n    \"payment_plan\": \"pro\",\n    \"users\": []\n  }\n}"
            }
          ]
        }
      ]
    }
  ]
}
